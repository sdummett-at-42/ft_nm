# **************************************************************************** #
#       TITLE                                                                  #
# **************************************************************************** #
NAME = test-bin-1

# **************************************************************************** #
#       COMMANDS                                                               #
# **************************************************************************** #
CC = cc

# **************************************************************************** #
#       FLAGS                                                                  #
# **************************************************************************** #
CFLAGS_COMMON = -Wall -Wextra -Werror
CFLAGS_32 = $(CFLAGS_COMMON) -m32
CFLAGS_64 = $(CFLAGS_COMMON)

# **************************************************************************** #
#       SOURCES                                                                #
# **************************************************************************** #
SRCS = srcs/src-1.c

# **************************************************************************** #
#       RULES                                                                  #
# **************************************************************************** #
OBJ_DIR = objs
OBJS = $(addprefix $(OBJ_DIR)/,$(SRCS:.c=.o))
OBJ_DIRS = $(sort $(dir $(OBJS)))

objs/%.o : %.c | $(OBJ_DIRS)
	$(CC) -I. -c $(CFLAGS) $< -o $@

$(NAME)_32 : CFLAGS = $(CFLAGS_32)
$(NAME)_32 : $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

$(NAME)_64 : CFLAGS = $(CFLAGS_64)
$(NAME)_64 : $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

$(OBJ_DIRS):
	mkdir -p $@

all: $(NAME)_64

clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

# **************************************************************************** #
#       PHONY                                                                  #
# **************************************************************************** #
.PHONY: all clean fclean re
